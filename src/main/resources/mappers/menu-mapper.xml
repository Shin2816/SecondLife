<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 해당 파일에 모든 쿼리문을 작성 -->
<mapper namespace="menuMapper">
    <resultMap id="menu" type="com.green.SecondLife.member.vo.MenuVO">
        <id column="MENU_CODE"      property="menuCode"/>
        <result column="MENU_NAME"  property="menuName"/>
        <result column="MENU_URL"   property="menuUrl"/>
    </resultMap>

    <resultMap id="subMenu" type="com.green.SecondLife.member.vo.SubMenuVO">
        <id column="SUB_MENU_CODE"      property="subMenuCode"/>
        <result column="SUB_MENU_NAME"  property="subMenuName"/>
        <result column="SUB_MENU_URL"   property="subMenuUrl"/>
        <result column="MENU_CODE"      property="menuCode"/>
    </resultMap>

    <!--관리자 메뉴 목록 조회-->
    <select id="selectMenuList" resultMap="menu">
        SELECT MENU_CODE
        , MENU_NAME
        , MENU_URL
        FROM MENU
        ORDER BY MENU_CODE
    </select>
    <!--관리자 서브 메뉴 목록 조회-->
    <select id="selectSubMenuList" resultMap="subMenu">
        SELECT SUB_MENU_CODE
        ,SUB_MENU_NAME
        ,SUB_MENU_URL
        ,MENU_CODE
        FROM SUB_MENU
        WHERE MENU_CODE = #{menuCode}
    </select>
    <!--유저 메뉴 목록 조회-->
    <select id="selectMainMenuList" resultMap="menu">
        SELECT * FROM MENU
        WHERE SUBSTR(MENU_CODE,6) > 4
        AND SUBSTR(MENU_CODE,6) &lt; 12
    </select>
    <!--유저 서브 메뉴 목록 조회-->
    <select id="selectMainSubMenuList" resultMap="subMenu">
        select * from sub_menu
        where SUBSTR(MENU_CODE,6) > 4
        AND SUBSTR(MENU_CODE,6) &lt; 12
    </select>




	
</mapper>































